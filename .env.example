# =============================================================================
# FormaOS — Environment Configuration Template
# =============================================================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to version control!
#
# Variables marked [PUBLIC] are exposed to the browser (NEXT_PUBLIC_*).
# Variables marked [SECRET] must NEVER be exposed client-side.
# =============================================================================

# =============================================================================
# SUPABASE  (required)
# =============================================================================
# Dashboard: Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co          # [PUBLIC]
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...                               # [PUBLIC] anon/public key
SUPABASE_SERVICE_ROLE_KEY=eyJ...                                   # [SECRET] bypasses RLS

# =============================================================================
# APPLICATION URLS  (required)
# =============================================================================
# Local dev: http://localhost:3000
# Production: set in Vercel to your real domains
NEXT_PUBLIC_APP_URL=http://localhost:3000                           # [PUBLIC] app domain
NEXT_PUBLIC_SITE_URL=http://localhost:3000                          # [PUBLIC] marketing domain

# Cookie domain for cross-subdomain auth (production only)
# NEXT_PUBLIC_COOKIE_DOMAIN=.formaos.com.au                        # [PUBLIC]

# =============================================================================
# FOUNDER / ADMIN ACCESS  (required)
# =============================================================================
FOUNDER_EMAILS=founder@example.com                                 # [SECRET] comma-separated
# FOUNDER_USER_IDS=uuid-1,uuid-2                                  # [SECRET] optional

# =============================================================================
# HEALTH ENDPOINT HARDENING  (recommended: always ON in production)
# =============================================================================
HEALTH_DETAILED_PROTECT=1                                          # [SECRET] 1=token-protected (default), 0=public (never use in production)
HEALTH_DETAILED_FOUNDER_TOKEN=REPLACE_ME                          # [SECRET] required — set a strong random token

# =============================================================================
# STRIPE — BILLING  (required for billing)
# =============================================================================
# Use sk_test_* keys for development. Live keys only in Vercel.
STRIPE_SECRET_KEY=sk_test_REPLACE_ME                               # [SECRET]
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_ME                             # [SECRET]
STRIPE_PRICE_BASIC=price_REPLACE_ME                                # [SECRET] starter/basic plan
STRIPE_PRICE_PRO=price_REPLACE_ME                                  # [SECRET] pro plan
# STRIPE_PRICE_ENTERPRISE=price_REPLACE_ME                         # [SECRET] optional
# STRIPE_PRICE_STARTER=price_REPLACE_ME                            # [SECRET] alias for basic

# =============================================================================
# RESEND — EMAIL  (required for transactional emails)
# =============================================================================
RESEND_API_KEY=re_REPLACE_ME                                       # [SECRET]
RESEND_FROM_EMAIL=onboarding@formaos.com.au                        # [SECRET]

# =============================================================================
# UPSTASH REDIS — CACHING  (optional, graceful fallback)
# =============================================================================
# UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io          # [SECRET]
# UPSTASH_REDIS_REST_TOKEN=REPLACE_ME                              # [SECRET]

# =============================================================================
# GOOGLE IDENTITY SERVICES  (required for Google OAuth branding)
# =============================================================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com  # [PUBLIC]

# =============================================================================
# MONITORING  (optional)
# =============================================================================
# NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...                 # [PUBLIC]
# NEXT_PUBLIC_POSTHOG_KEY=phc_...                                  # [PUBLIC]
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com                 # [PUBLIC]

# =============================================================================
# CRON / AUTOMATION  (optional)
# =============================================================================
# CRON_SECRET=REPLACE_ME                                           # [SECRET]

# =============================================================================
# AI  (optional)
# =============================================================================
# OPENAI_API_KEY=sk-...                                            # [SECRET]
